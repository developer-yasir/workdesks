# MongoDB
MONGO_URI=mongodb://localhost:27017/workdesks

# JWT
JWT_SECRET=your_jwt_secret_key_here

# Server
PORT=5000
NODE_ENV=development

# Email Configuration (SMTP - Outbound)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here
EMAIL_FROM=WorkDesks Support <support@workdesks.com>

# App URL
APP_URL=http://localhost:5173

# IMAP Configuration (Inbound - Email to Ticket)
IMAP_USER=your-email@gmail.com
IMAP_PASS=your-app-password-here
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_TLS=true
IMAP_POLL_INTERVAL=60000
